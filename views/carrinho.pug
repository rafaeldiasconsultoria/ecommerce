extends layout

block content
    
  if __produtos
    div(style='width: 100%; text-align: center; ')
      each _produto in __produtos
        div(style='display: inline-block; width: 48%; text-align: center; border: 1px solid gainsboro; padding-bottom: 8px; margin: 2px;')
          img(src=_produto.imagens.principal, style='width: 100%; border: 0px')
          p 
            b #{_produto.nome}
            br
            = _produto.descricao.substring(0, 22) + '...'
          if !_produto.desconto
            b R$ #{_produto.valor}
          else
            small(style='text-decoration: line-through; color: red') R$ #{_produto.valor}
            b &nbsp; R$ #{_produto.desconto}
