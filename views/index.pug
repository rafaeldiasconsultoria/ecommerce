extends layout

block content
  if __banners
    each _banner in __banners
      img(src=_banner.banner, style='width: auto; max-width: 100%; padding: 0px', onclick='javascript:window.location="' + _banner.url + '"')
      br

  if __produtos
    div(style='width: 100%; text-align: center; ')
      each _produto in __produtos
        div(style='display: inline-block; width: 98%; max-width: 330px; text-align: center; border: 1px solid gainsboro; padding-bottom: 8px; margin: 2px;')
          img(src=_produto.imagens.principal, style='width: 100%; border: 0px')
          p 
            b #{_produto.nome}
            br
            = _produto.descricao
          if !_produto.desconto
            b R$ #{_produto.valor}
          else
            small(style='text-decoration: line-through; color: red') R$ #{_produto.valor}
            b &nbsp; R$ #{_produto.desconto}
  if __produtosPromocao
    br
    h3 Promoções
    div(style='width: 100%; text-align: center; ')
      each _produto in __produtosPromocao
        div(style='display: inline-block; width: 48%; max-width: 330px; text-align: center; border: 1px solid gainsboro; padding-bottom: 8px; margin: 2px;margin-bottom: 8px')
          img(src=_produto.imagens.principal, style='width: 100%; border: 0px')
          p 
            b #{_produto.nome}
            br
            = _produto.descricao.substring(0, 22) + '...'
          if !_produto.desconto
            b R$ #{_produto.valor}
          else
            small(style='text-decoration: line-through; color: red') R$ #{_produto.valor}
            b &nbsp; R$ #{_produto.desconto}

  if __categorias
    h3 Categorias
    div(style='width: 100%; text-align: center; ')
      each _categoria in __categorias
        button(style='text-transform: uppercase; border: 1px solid gainsboro; width: 48%; max-width: 330px; height: 42px; margin: 2px; background: white; color: ' + _categoria.cor ) #{_categoria.nome}